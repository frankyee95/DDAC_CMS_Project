@model DDAC_project.Models.Vessel
@{
    ViewBag.Title = "Delete Vessel";
}

<h1 align="center">Delete Vessel</h1>
<hr>
<div class="row">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="col-md-8 col-md-offset-2">
                <p>
                    @using (Html.BeginForm("DeleteVessel", "Home", FormMethod.Post, null))
                    {
                        <fieldset>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.vesselName)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.vesselName,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.containers)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.containers,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.destinationYard)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.destinationYard,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.arrivalYard)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.arrivalYard,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </fieldset>
                        <br />
                    <p align="center" style="color:red">Are you sure you want to delete this vessel?</p>
                    <p align="center">
                        <input class="btn btn-primary" type="submit" value="Yes">
                    </p>
                    }
                    <p align="center">
                        <button class="btn btn-default">@Html.ActionLink("No", "ViewVessel", "Home")</button>
                    </p>
                    </p>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
