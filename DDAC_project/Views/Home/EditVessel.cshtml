@model DDAC_project.Models.Vessel
@{
    ViewBag.Title = "Edit Vessel";
}

<h1 align="center">Edit Vessel</h1>
<hr>
<div class="row">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="col-md-8 col-md-offset-2">
                <p>
                    @using (Html.BeginForm("EditVessel", "Home", FormMethod.Post, null))
                    {
                        <fieldset>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.vesselName)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.vesselName,
               new { htmlAttributes = new {@class="form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.containers)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.containers, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.destinationYard)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.destinationYard, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.arrivalYard)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.arrivalYard, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </fieldset>
                        <br />
                    <p align="center">
                        <input class="btn btn-success" type="submit" value="Save Changes">
                    </p>
                    }
                    </p>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
