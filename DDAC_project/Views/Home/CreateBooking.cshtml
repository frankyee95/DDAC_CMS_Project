@model DDAC_project.Models.Booking
@{
    ViewBag.Title = "Create Booking";
}

<h2>Create Booking</h2>
<hr>
<p>
    @using (Html.BeginForm("CreateBooking", "Home", FormMethod.Post, null))
    {
        <fieldset>
            <div class="editor-label">
                <label for="bookingId">Booking Id</label>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.bookingId, new { htmlAttributes = new { @class="form-control", @placeholder="Please insert a random Booking ID"} })
            </div>
            <div class="editor-label">
                <label for="scheduleId">Schedule Id</label>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.scheduleId,
               new { htmlAttributes = new { @class="form-control", @readonly = "readonly" } })
            </div>
        </fieldset>
        <br />
    <p>
        <input class="btn btn-info" type="submit" value="Save Changes">
    </p>
    }
    </p>