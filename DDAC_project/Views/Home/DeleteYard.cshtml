@model DDAC_project.Models.Yard
@{
    ViewBag.Title = "Delete Yard";
}

<h1 align="center">Delete Yard</h1>
<hr>
<div class="row">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="col-md-8 col-md-offset-2">
                <p>
                    @using (Html.BeginForm("DeleteYard", "Home", FormMethod.Post, null))
                    {
                        <fieldset>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.yardName)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.yardName,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.yardLocation)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.yardLocation,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.yardCountry)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.yardCountry,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </fieldset>
                        <br />
                    <p align="center" style="color:red;">Are you sure you want to delete this yard?</p>
                    <p align="center">
                        <input class="btn btn-primary" type="submit" value="Yes">
                    </p>
                    }
                    <p align="center">
                        <button class="btn btn-default">@Html.ActionLink("No", "ViewYard", "Home")</button>
                    </p>
                    </p>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
