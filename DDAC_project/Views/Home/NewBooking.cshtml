@model List<DDAC_project.Models.Schedule>

@{
    ViewBag.Title = "New Booking";
}

<style>
    table, tr, td {
        border: solid 1px;
    }
</style>

<h1>New Booking</h1>
<p>
    @using (Html.BeginForm("NewBooking", "Home", FormMethod.Post, null))
    {
        <fieldset>
            <table class="table table-hover" style="width:100%;">
                <tr>
                    <td style="background-color:black; text-align:center; color:white">Schedule Id</td>
                    <td style="background-color:black; text-align:center; color:white">Cargo Id</td>
                    <td style="background-color:black; text-align:center; color:white">Vessel Name</td>
                    <td style="background-color:black; text-align:center; color:white">Yard Name</td>
                    <td style="background-color:black; text-align:center; color:white">Departure Date</td>
                    <td style="background-color:black; text-align:center; color:white">Arrival Date</td>
                    <td style="background-color:black; text-align:center; color:white">Action</td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.scheduleId</td>
                        <td>@item.selectedCargoId</td>
                        <td>@item.selectedVesselName</td>
                        <td>@item.selectedYardName</td>
                        <td>@item.departureDate</td>
                        <td>@item.arrivalDate</td>
                        <td align="center">@Html.ActionLink("Book this", "CreateBooking", new { scheduleId = @item.scheduleId })</td>
                    </tr>
                }
            </table>
        </fieldset>
    }
</p>