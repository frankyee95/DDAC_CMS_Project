@model DDAC_project.Models.Yard
@{
    ViewBag.Title = "Create Yard";
}
<h1 align="center">Create Yard</h1>
<hr>
<div class="row">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="col-md-8 col-md-offset-2">
                <p>
                    @using (Html.BeginForm("CreateYard", "Home", FormMethod.Post, null))
                    {
                        <fieldset>
                            <div class="editor-label">
                                <label for="yardName">Yard Name</label>
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.yardName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                <label for="yardLocation">Yard Locations</label>
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.yardLocation, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                <label for="yardCountry">Yard Country</label>
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.yardCountry, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </fieldset>
                        <br>
                    <p align="center">
                        <input class="btn btn-info" type="submit" value="Create Yard" />
                    </p>
                    }
                    </p>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
