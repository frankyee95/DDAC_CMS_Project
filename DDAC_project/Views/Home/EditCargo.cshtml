@model DDAC_project.Models.Cargo
@{
    ViewBag.Title = "Edit Cargo";
}

<h1 align="center">Edit Cargo</h1>
<hr>
<div class="row">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="col-md-8 col-md-offset-2">
                <p>
                    @using (Html.BeginForm("EditCargo", "Home", FormMethod.Post, null))
                    {
                        <fieldset>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.cargoId)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoId,
               new { htmlAttributes = new { @class= "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.cargoName)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.cargoDeparture)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoDeparture, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.cargoArrival)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoArrival, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.cargoVolume)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoVolume, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </fieldset>
                        <br />
                    <p align="center">
                        <input class="btn btn-success" type="submit" value="Save Changes">
                    </p>
                    }
                    </p>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
