@model DDAC_project.Models.Vessel
@{
    ViewBag.Title = "Create Vessel";
}
<form method="post">
    <h1 align="center">Create New Vessel</h1>
    <hr>
    <div class="row">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="col-md-8 col-md-offset-2">
                    <p>
                        @using (Html.BeginForm("CreateVessel", "Home", FormMethod.Post, null))
                        {
                            <fieldset>
                                <div class="editor-label">
                                    <label for="vesselName">Vessel Name</label>
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.vesselName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="editor-label">
                                    <label for="containers">Containers</label>
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.containers, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="editor-label">
                                    <label for="destinationYard">Destination Yard</label>
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.destinationYard, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="editor-label">
                                    <label for="arrivalYard">Arrival Yard</label>
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.arrivalYard, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </fieldset>
                            <br>
                        <p align="center">
                            <input class="btn btn-info" type="submit" value="Create Vessel" />
                        </p>
                        }
                        </p>
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </form>