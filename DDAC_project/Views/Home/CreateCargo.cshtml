@model DDAC_project.Models.Cargo
@{
    ViewBag.Title = "Create Cargo";
}

<h1 align="center">Create New Cargo</h1>
<hr>
<div class="row">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="col-md-8 col-md-offset-2">
                <p>
                    @using (Html.BeginForm("CreateCargo", "Home", FormMethod.Post, null))
            {
                        <fieldset>
                            <div class="editor-label">
                                <label for="cargoId">Cargo Id</label>
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoId, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                <label for="cargoName">Cargo Name</label>
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                <label for="cargoDeparture">Cargo Departure</label>
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoDeparture, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                <label for="cargoArrival">Cargo Arrival</label>
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoArrival, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                <label for="cargoVolume">Cargo Volume</label>
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoVolume, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </fieldset>
                        <br>
                    <p align="center">
                        <input class="btn btn-info" type="submit" value="Create Cargo" />
                    </p>
                    }
                    </p>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
