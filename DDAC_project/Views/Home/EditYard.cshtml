@model DDAC_project.Models.Yard
@{
    ViewBag.Title = "Edit Yard";
}

<h1 align="center">Edit Yard</h1>
<hr />
<div class="row">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="col-md-8 col-md-offset-2">
                <p>
                    @using (Html.BeginForm("EditYard", "Home", FormMethod.Post, null))
                    {
                        <fieldset>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.yardName)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.yardName,
               new { htmlAttributes = new {@class="form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.yardLocation)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.yardLocation, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.yardCountry)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.yardCountry, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </fieldset>
                        <br />
                    <p align="center">
                        <input class="btn btn-success" type="submit" value="Save Changes">
                    </p>
                    }
                    </p>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
