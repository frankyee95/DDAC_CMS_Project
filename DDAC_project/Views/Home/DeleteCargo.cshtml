@model DDAC_project.Models.Cargo
@{
    ViewBag.Title = "Delete Cargo";
}

<h1 align="center">Delete Cargo</h1>
<hr>
<div class="row">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="col-md-8 col-md-offset-2">
                <p>
                    @using (Html.BeginForm("DeleteCargo", "Home", FormMethod.Post, null))
                    {
                        <fieldset>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.cargoId)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoId,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.cargoName)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoName,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.cargoDeparture)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoDeparture,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.cargoArrival)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoArrival,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.cargoVolume)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cargoVolume,
               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </fieldset>
                        <br />
                    <p align="center" style="color: red">Are you sure you want to delete this cargo?</p>
                    <p align="center">
                        <input class="btn btn-primary" type="submit" value="Yes">

                    </p>
                    }
                    <p align="center">
                        <button class="btn btn-default">@Html.ActionLink("No", "ViewCargo", "Home")</button>
                    </p>
                    </p>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>